package com.bridgelabz.spring.dataconnection;

import org.springframework.beans.factory.annotation.Value;

public class JdbcConnection {
	@Value("root")
	String userName;
	@Value("password")
    String userPassword;
	@Value("com.mysql.jdbc.Driver")
    String classCon;
	@Value("jdbc:mysql://localhost:3306/design_patterns?useSSL=false")
    String url;

	
	  public void setUserName(String userName) { this.userName = userName; }
	  
	  public void setUserPassword(String userPassword) { this.userPassword =
	  userPassword; }
	  
	  public void setClassCon(String classCon) { this.classCon = classCon; }
	  
	  public void setUrl(String url) { this.url = url; }
	 
	public void display()
	{
		System.out.println("useName :"+userName);
		System.out.println("userpassword :"+userPassword);
		System.out.println("classconnection :"+classCon);
		System.out.println("url:"+url);
	}

}
